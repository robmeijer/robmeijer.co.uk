{% extends 'layouts/admin-lte.html.twig' %}

{% block title 'Register' %}

{% block body_class 'hold-transition register-page' %}

{% block body %}
<div class="register-box">
    <div class="register-logo">
        <a href="{{ url('home') }}"><strong>robmeijer.co.uk</strong></a>
    </div>

    <div class="register-box-body">
        <form action="{{ url('home') }}" method="post">
            <div class="form-group has-feedback">
                <input class="form-control" placeholder="Username">
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control" placeholder="Password">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control" placeholder="Retype password">
                <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                        <label>
                            <input type="checkbox"> I agree to the <a href="#">terms</a>
                        </label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <button class="btn btn-primary btn-block btn-flat">Register</button>
                </div>
                <!-- /.col -->
            </div>
        </form>

        <a href="{{ path('security_login') }}" class="text-center">I already have an account</a>
    </div>
    <!-- /.form-box -->
</div>
<!-- /.register-box -->
{% endblock %}
